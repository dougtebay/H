          </ul>
          <ul class="nav navbar-nav navbar-right">
                <% if current_user %>
                <p class="navbar-text">Logged in as <%= current_user.email %></p>
                  <li><%= button_to 'Log Out', logout_path, method: 'get', class: 'btn btn-default navbar-btn' %></li>
                <% else %>
                  <li><%= button_to 'Sign Up', signup_path, method: 'get', class: 'btn btn-default navbar-btn' %></li>
                  <li><%= button_to 'Log In', login_path, method: 'get', class: 'btn btn-default navbar-btn' %></li>
                <% end %>
              </div>
            </nav>
          </ul>
        </div><!--/.nav-collapse -->
      </div>
    </nav>
