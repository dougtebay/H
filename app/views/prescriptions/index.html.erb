<div>

  <%= button_to 'New Prescription', new_prescription_path, method: 'get', class: 'btn btn-default' %>

  <% @prescriptions.each do |p| %>
    <div class='prescription'>
      <ul>
        <p class='ul-header'>Drug:</p>
        <li>Name: <%= p.drug.name %></li>
        <li>Refills: <%= p.refills %></li>
        <li>Fill Duration: <%= p.fill_duration %></li>
        <li>Start date: <%= p.start_date %></li>
        <li>End date: <%= p.end_date %></li>
        <p class='ul-header'>Doctor:</p>
        <li>Dr. <%= p.doctor.first_name %> <%= p.doctor.last_name %>, <%= p.doctor.specialty %></li>
        <li><%= p.doctor.location %></li>
        <p class='ul-header'>Pharmacy:</p>
        <li><%= p.pharmacy.name %></li>
        <li><%= p.pharmacy.location %></li>
      </ul>
    </div>
  <% end %>
</div>