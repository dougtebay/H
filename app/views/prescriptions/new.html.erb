<html>
<head>
  <title></title>
</head>
<body>

  <%= form_for @prescription do |f| %>
    Drug name? <%=fields_for :drug do |drug_form| %><br>
        <%= drug_form.text_field :name %>
      <% end %><br>
    Doctor name? <%=fields_for :doctor do |doctor_form| %><br>
        <%= doctor_form.text_field :name %>
      <% end %><br>
    Pharmacy name? <%=fields_for :pharmacy do |pharmacy_form| %><br>
        <%= pharmacy_form.text_field :name %>
      <% end %><br>


    For how long? <br>
    <%= f.number_field :fill_duration %><br> Days

    How many refills? <br>
    <%= f.number_field :refills %><br>

    Start date? <br>
    <%= f.date_field :start_date %><br>

    Dose size?<br>
     <%= f.text_field :dose_size %><br>

    <%= f.submit :Prescribe! %>
  <% end %>

</body>
</html>