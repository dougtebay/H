<div class="col-xs-3 pillbox-cell pillbox-cell-morning">
  <div class='icon-container'><%= image_tag 'morning.png', class: 'morning-icon' %></div>
  <% @user.regimen('morning').each do |drug| %>
  <br><%= drug[:name] %> (<%= drug[:dose_size] %>)
  <% if drug[:doses] != 1 %>
    x<%= drug[:doses] %>
  <% end %>
    <% if drug[:interactions].length > 0 %>
      <div class='warning-icon-container'>
        <%= image_tag 'warning.png', class: 'warning-icon' %>
        <div class='warning-message'>
          <% drug[:interactions].each do |interaction| %>
            <p><span class='warning-headline'>Interacts with <%= interaction[:drug_name] %></span><br>
            <%= interaction[:interaction] %></p>
          <% end %>
        </div>
      </div>
    <% end %>
  <% end %>
  <div id='morning-highlight'></div>
</div>
